// makeHeader is a convenience function to make a message header in the form of
// a byte slice.  It is used to force errors when reading messages.
func makeHeader(fctnet messages.FactomNet, command string,
	payloadLen uint32, checksum uint32) []byte {

	// The length of a bitcoin message header is 24 bytes.
	// 4 byte magic number of the bitcoin network + 12 byte command + 4 byte
	// payload length + 4 byte checksum.
	buf := make([]byte, 24)
	binary.BigEndian.PutUint32(buf, uint32(fctnet))
	copy(buf[4:], []byte(command))
	binary.BigEndian.PutUint32(buf[16:], payloadLen)
	binary.BigEndian.PutUint32(buf[20:], checksum)
	return buf
}

// TestMessage tests the Read/WriteMessage and Read/WriteMessageN API.
func TestMessage(t *testing.T) {
	pver := messages.ProtocolVersion

	// Create the various types of messages to test.

	// MsgVersion.
	addrYou := &net.TCPAddr{IP: net.ParseIP("192.168.0.1"), Port: 8333}
	you, err := messages.NewNetAddress(addrYou, messages.SFNodeNetwork)
	if err != nil {
		t.Errorf("NewNetAddress: %v", err)
	}
	you.Timestamp = time.Time{} // Version message has zero value timestamp.
	addrMe := &net.TCPAddr{IP: net.ParseIP("127.0.0.1"), Port: 8333}
	me, err := messages.NewNetAddress(addrMe, messages.SFNodeNetwork)
	if err != nil {
		t.Errorf("NewNetAddress: %v", err)
	}
	me.Timestamp = time.Time{} // Version message has zero value timestamp.
	msgVersion := messages.NewMsgVersion(me, you, 123123, 0)

	msgVerack := messages.NewMsgVerAck()
	msgGetAddr := messages.NewMsgGetAddr()
	msgAddr := messages.NewMsgAddr()
	msgGetBlocks := messages.NewMsgGetBlocks(&interfaces.IHash{})
	msgBlock := &blockOne
	msgInv := messages.NewMsgInv()
	msgGetData := messages.NewMsgGetData()
	msgNotFound := messages.NewMsgNotFound()
	msgTx := messages.NewMsgTx()
	msgPing := messages.NewMsgPing(123123)
	msgPong := messages.NewMsgPong(123123)
	msgGetHeaders := messages.NewMsgGetHeaders()
	msgHeaders := messages.NewMsgHeaders()
	msgAlert := messages.NewMsgAlert([]byte("payload"), []byte("signature"))
	msgMemPool := messages.NewMsgMemPool()
	msgFilterAdd := messages.NewMsgFilterAdd([]byte{0x01})
	msgFilterClear := messages.NewMsgFilterClear()
	msgFilterLoad := messages.NewMsgFilterLoad([]byte{0x01}, 10, 0, messages.BloomUpdateNone)
	bh := messages.NewBlockHeader(&interfaces.IHash{}, &interfaces.IHash{}, &messages.Sha3Hash{})
	//	msgMerkleBlock := messages.NewMsgMerkleBlock(bh)
	msgReject := messages.NewMsgReject("block", messages.RejectDuplicate, "duplicate block")

	tests := []struct {
		in     messages.Message    // Value to encode
		out    messages.Message    // Expected decoded value
		pver   uint32          // Protocol version for wire encoding
		fctnet messages.FactomNet // Network to use for wire encoding
		bytes  int             // Expected num bytes read/written
	}{
		{msgVersion, msgVersion, pver, messages.MainNet, 125},
		{msgVerack, msgVerack, pver, messages.MainNet, 24},
		{msgGetAddr, msgGetAddr, pver, messages.MainNet, 24},
		{msgAddr, msgAddr, pver, messages.MainNet, 25},
		{msgGetBlocks, msgGetBlocks, pver, messages.MainNet, 61},
		{msgBlock, msgBlock, pver, messages.MainNet, 210},
		{msgInv, msgInv, pver, messages.MainNet, 25},
		{msgGetData, msgGetData, pver, messages.MainNet, 25},
		{msgNotFound, msgNotFound, pver, messages.MainNet, 25},
		{msgTx, msgTx, pver, messages.MainNet, 34},
		{msgPing, msgPing, pver, messages.MainNet, 32},
		{msgPong, msgPong, pver, messages.MainNet, 32},
		{msgGetHeaders, msgGetHeaders, pver, messages.MainNet, 61},
		{msgHeaders, msgHeaders, pver, messages.MainNet, 25},
		{msgAlert, msgAlert, pver, messages.MainNet, 42},
		{msgMemPool, msgMemPool, pver, messages.MainNet, 24},
		{msgFilterAdd, msgFilterAdd, pver, messages.MainNet, 26},
		{msgFilterClear, msgFilterClear, pver, messages.MainNet, 24},
		{msgFilterLoad, msgFilterLoad, pver, messages.MainNet, 35},
		//		{msgMerkleBlock, msgMerkleBlock, pver, messages.MainNet, 126},
		{msgReject, msgReject, pver, messages.MainNet, 79},
	}

	t.Logf("Running %d tests", len(tests))
	for i, test := range tests {
		// Encode to wire format.
		var buf bytes.Buffer
		nw, err := messages.WriteMessageN(&buf, test.in, test.pver, test.fctnet)
		if err != nil {
			t.Errorf("WriteMessage #%d error %v", i, err)
			continue
		}

		// Ensure the number of bytes written match the expected value.
		if nw != test.bytes {
			t.Errorf("WriteMessage #%d unexpected num bytes "+
				"written - got %d, want %d", i, nw, test.bytes)
		}

		// Decode from wire format.
		rbuf := bytes.NewReader(buf.Bytes())
		nr, msg, _, err := messages.ReadMessageN(rbuf, test.pver, test.fctnet)
		if err != nil {
			t.Errorf("ReadMessage #%d error %v, msg %v", i, err,
				spew.Sdump(msg))
			continue
		}
		if !reflect.DeepEqual(msg, test.out) {
			t.Errorf("ReadMessage #%d\n got: %v want: %v", i,
				spew.Sdump(msg), spew.Sdump(test.out))
			continue
		}

		// Ensure the number of bytes read match the expected value.
		if nr != test.bytes {
			t.Errorf("ReadMessage #%d unexpected num bytes read - "+
				"got %d, want %d", i, nr, test.bytes)
		}
	}

	// Do the same thing for Read/WriteMessage, but ignore the bytes since
	// they don't return them.
	t.Logf("Running %d tests", len(tests))
	for i, test := range tests {
		// Encode to wire format.
		var buf bytes.Buffer
		err := messages.WriteMessage(&buf, test.in, test.pver, test.fctnet)
		if err != nil {
			t.Errorf("WriteMessage #%d error %v", i, err)
			continue
		}

		// Decode from wire format.
		rbuf := bytes.NewReader(buf.Bytes())
		msg, _, err := messages.ReadMessage(rbuf, test.pver, test.fctnet)
		if err != nil {
			t.Errorf("ReadMessage #%d error %v, msg %v", i, err,
				spew.Sdump(msg))
			continue
		}
		if !reflect.DeepEqual(msg, test.out) {
			t.Errorf("ReadMessage #%d\n got: %v want: %v", i,
				spew.Sdump(msg), spew.Sdump(test.out))
			continue
		}
	}
}

// TestReadMessageWireErrors performs negative tests against wire decoding into
// concrete messages to confirm error paths work correctly.
func TestReadMessageWireErrors(t *testing.T) {
	pver := messages.ProtocolVersion
	fctnet := messages.MainNet

	// Ensure message errors are as expected with no function specified.
	wantErr := "something bad happened"
	testErr := messages.MessageError{Description: wantErr}
	if testErr.Error() != wantErr {
		t.Errorf("MessageError: wrong error - got %v, want %v",
			testErr.Error(), wantErr)
	}

	// Ensure message errors are as expected with a function specified.
	wantFunc := "foo"
	testErr = messages.MessageError{Func: wantFunc, Description: wantErr}
	if testErr.Error() != wantFunc+": "+wantErr {
		t.Errorf("MessageError: wrong error - got %v, want %v",
			testErr.Error(), wantErr)
	}

	// Wire encoded bytes for main and testnet3 networks magic identifiers.
	testNet3Bytes := makeHeader(messages.TestNet3, "", 0, 0)

	// Wire encoded bytes for a message that exceeds max overall message
	// length.
	mpl := uint32(messages.MaxMessagePayload)
	exceedMaxPayloadBytes := makeHeader(fctnet, "getaddr", mpl+1, 0)

	// Wire encoded bytes for a command which is invalid utf-8.
	badCommandBytes := makeHeader(fctnet, "bogus", 0, 0)
	badCommandBytes[4] = 0x81

	// Wire encoded bytes for a command which is valid, but not supported.
	unsupportedCommandBytes := makeHeader(fctnet, "bogus", 0, 0)

	// Wire encoded bytes for a message which exceeds the max payload for
	// a specific message type.
	exceedTypePayloadBytes := makeHeader(fctnet, "getaddr", 1, 0)

	// Wire encoded bytes for a message which does not deliver the full
	// payload according to the header length.
	shortPayloadBytes := makeHeader(fctnet, "version", 115, 0)

	// Wire encoded bytes for a message with a bad checksum.
	badChecksumBytes := makeHeader(fctnet, "version", 2, 0xbeef)
	badChecksumBytes = append(badChecksumBytes, []byte{0x0, 0x0}...)

	// Wire encoded bytes for a message which has a valid header, but is
	// the wrong format.  An addr starts with a varint of the number of
	// contained in the message.  Claim there is two, but don't provide
	// them.  At the same time, forge the header fields so the message is
	// otherwise accurate.
	badMessageBytes := makeHeader(fctnet, "addr", 1, 0x1cc3adea)
	badMessageBytes = append(badMessageBytes, 0x2)

	// Wire encoded bytes for a message which the header claims has 15k
	// bytes of data to discard.
	discardBytes := makeHeader(fctnet, "bogus", 15*1024, 0)

	tests := []struct {
		buf     []byte          // Wire encoding
		pver    uint32          // Protocol version for wire encoding
		fctnet  messages.FactomNet // Bitcoin network for wire encoding
		max     int             // Max size of fixed buffer to induce errors
		readErr error           // Expected read error
		bytes   int             // Expected num bytes read
	}{
		// Latest protocol version with intentional read errors.

		// Short header.
		{
			[]byte{},
			pver,
			fctnet,
			0,
			io.EOF,
			0,
		},

		// Wrong network.  Want MainNet, but giving TestNet3.
		{
			testNet3Bytes,
			pver,
			fctnet,
			len(testNet3Bytes),
			&messages.MessageError{},
			24,
		},

		// Exceed max overall message payload length.
		{
			exceedMaxPayloadBytes,
			pver,
			fctnet,
			len(exceedMaxPayloadBytes),
			&messages.MessageError{},
			24,
		},

		// Invalid UTF-8 command.
		{
			badCommandBytes,
			pver,
			fctnet,
			len(badCommandBytes),
			&messages.MessageError{},
			24,
		},

		// Valid, but unsupported command.
		{
			unsupportedCommandBytes,
			pver,
			fctnet,
			len(unsupportedCommandBytes),
			&messages.MessageError{},
			24,
		},

		// Exceed max allowed payload for a message of a specific type.
		{
			exceedTypePayloadBytes,
			pver,
			fctnet,
			len(exceedTypePayloadBytes),
			&messages.MessageError{},
			24,
		},

		// Message with a payload shorter than the header indicates.
		{
			shortPayloadBytes,
			pver,
			fctnet,
			len(shortPayloadBytes),
			io.EOF,
			24,
		},

		// Message with a bad checksum.
		{
			badChecksumBytes,
			pver,
			fctnet,
			len(badChecksumBytes),
			&messages.MessageError{},
			26,
		},

		// Message with a valid header, but wrong format.
		{
			badMessageBytes,
			pver,
			fctnet,
			len(badMessageBytes),
			io.EOF,
			25,
		},

		// 15k bytes of data to discard.
		{
			discardBytes,
			pver,
			fctnet,
			len(discardBytes),
			&messages.MessageError{},
			24,
		},
	}

	t.Logf("Running %d tests", len(tests))
	for i, test := range tests {
		// Decode from wire format.
		r := newFixedReader(test.max, test.buf)
		nr, _, _, err := messages.ReadMessageN(r, test.pver, test.fctnet)
		if reflect.TypeOf(err) != reflect.TypeOf(test.readErr) {
			t.Errorf("ReadMessage #%d wrong error got: %v <%T>, "+
				"want: %T", i, err, err, test.readErr)
			continue
		}

		// Ensure the number of bytes written match the expected value.
		if nr != test.bytes {
			t.Errorf("ReadMessage #%d unexpected num bytes read - "+
				"got %d, want %d", i, nr, test.bytes)
		}

		// For errors which are not of type messages.MessageError, check
		// them for equality.
		if _, ok := err.(*messages.MessageError); !ok {
			if err != test.readErr {
				t.Errorf("ReadMessage #%d wrong error got: %v <%T>, "+
					"want: %v <%T>", i, err, err,
					test.readErr, test.readErr)
				continue
			}
		}
	}
}

// TestWriteMessageWireErrors performs negative tests against wire encoding from
// concrete messages to confirm error paths work correctly.
func TestWriteMessageWireErrors(t *testing.T) {
	pver := messages.ProtocolVersion
	fctnet := messages.MainNet
	wireErr := &messages.MessageError{}

	// Fake message with a command that is too long.
	badCommandMsg := &fakeMessage{command: "somethingtoolong"}

	// Fake message with a problem during encoding
	encodeErrMsg := &fakeMessage{forceEncodeErr: true}

	// Fake message that has payload which exceeds max overall message size.
	exceedOverallPayload := make([]byte, messages.MaxMessagePayload+1)
	exceedOverallPayloadErrMsg := &fakeMessage{payload: exceedOverallPayload}

	// Fake message that has payload which exceeds max allowed per message.
	exceedPayload := make([]byte, 1)
	exceedPayloadErrMsg := &fakeMessage{payload: exceedPayload, forceLenErr: true}

	// Fake message that is used to force errors in the header and payload
	// writes.
	bogusPayload := []byte{0x01, 0x02, 0x03, 0x04}
	bogusMsg := &fakeMessage{command: "bogus", payload: bogusPayload}

	tests := []struct {
		msg    messages.Message    // Message to encode
		pver   uint32          // Protocol version for wire encoding
		fctnet messages.FactomNet // Bitcoin network for wire encoding
		max    int             // Max size of fixed buffer to induce errors
		err    error           // Expected error
		bytes  int             // Expected num bytes written
	}{
		// Command too long.
		{badCommandMsg, pver, fctnet, 0, wireErr, 0},
		// Force error in payload encode.
		{encodeErrMsg, pver, fctnet, 0, wireErr, 0},
		// Force error due to exceeding max overall message payload size.
		{exceedOverallPayloadErrMsg, pver, fctnet, 0, wireErr, 0},
		// Force error due to exceeding max payload for message type.
		{exceedPayloadErrMsg, pver, fctnet, 0, wireErr, 0},
		// Force error in header write.
		{bogusMsg, pver, fctnet, 0, io.ErrShortWrite, 0},
		// Force error in payload write.
		{bogusMsg, pver, fctnet, 24, io.ErrShortWrite, 24},
	}

	t.Logf("Running %d tests", len(tests))
	for i, test := range tests {
		// Encode wire format.
		w := newFixedWriter(test.max)
		nw, err := messages.WriteMessageN(w, test.msg, test.pver, test.fctnet)
		if reflect.TypeOf(err) != reflect.TypeOf(test.err) {
			t.Errorf("WriteMessage #%d wrong error got: %v <%T>, "+
				"want: %T", i, err, err, test.err)
			continue
		}

		// Ensure the number of bytes written match the expected value.
		if nw != test.bytes {
			t.Errorf("WriteMessage #%d unexpected num bytes "+
				"written - got %d, want %d", i, nw, test.bytes)
		}

		// For errors which are not of type messages.MessageError, check
		// them for equality.
		if _, ok := err.(*messages.MessageError); !ok {
			if err != test.err {
				t.Errorf("ReadMessage #%d wrong error got: %v <%T>, "+
					"want: %v <%T>", i, err, err,
					test.err, test.err)
				continue
			}
		}
	}
}

func TestLengthChecks(t *testing.T) {
	var errors = 0

	cmdlist := []string{
		messages.CmdEntry,
		messages.CmdBlock,
		messages.CmdCommitChain,
		messages.CmdCommitEntry,
		messages.CmdDirBlock,
		messages.CmdEBlock,
		messages.CmdCBlock,
		messages.CmdGetDirBlocks,
		//		messages.CmdMerkleBlock,
		messages.CmdMHashReveal,
		messages.CmdRevealChain,
		messages.CmdRevealEntry,
	}

	for _, value := range cmdlist {
		if messages.CommandSize < len(value) {
			errors++
		}
	}

	if 0 < errors {
		t.Errorf("LengthChecks errors= %d", errors)
	}
}
